# ============================================
# MoveMint - Environment Configuration
# ============================================
# Copy this file to .env and update with your actual values

# ============================================
# Universal Minting Engine API Configuration
# ============================================
# NOTE: Do not include /api in the base URL - endpoints already have it
NEXT_PUBLIC_UNIVERSAL_MINTING_ENGINE_API_URL=http://localhost:3000
NEXT_PUBLIC_UNIVERSAL_MINTING_ENGINE_API_KEY=dev_api_key_local

# ============================================
# Story Protocol Configuration
# ============================================
# Legacy RPC (for compatibility)
NEXT_PUBLIC_STORY_PROTOCOL_CHAIN_ID=1513
NEXT_PUBLIC_STORY_PROTOCOL_RPC_URL=https://testnet.storyrpc.io

# Story Protocol Network Configuration (Aeneid Testnet)
NEXT_PUBLIC_STORY_NETWORK=aeneid
NEXT_PUBLIC_RPC_URL_AENEID=https://rpc.aeneid.testnet.story.foundation
NEXT_PUBLIC_RPC_URL_MAINNET=https://rpc.mainnet.story.foundation
NEXT_PUBLIC_EXPLORER_URL=https://aeneid.testnet.story.foundation

# ============================================
# Application Configuration
# ============================================
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=true

# ============================================
# Feature Flags
# ============================================
# Set to false to disable features
NEXT_PUBLIC_ENABLE_VIDEO_PROCESSING=true
NEXT_PUBLIC_ENABLE_LICENSE_REMIXER=true
NEXT_PUBLIC_ENABLE_NFT_MINTING=true

# ============================================
# Performance Configuration
# ============================================
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_MAX_RETRY_ATTEMPTS=3
NEXT_PUBLIC_UPLOAD_CHUNK_SIZE=1048576

# ============================================
# Wallet Configuration (Optional)
# ============================================
# Only needed if using client-side wallet connection
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id
NEXT_PUBLIC_ENABLE_WALLET_CONNECT=true

# ============================================
# Server-side Blockchain Configuration (REQUIRED FOR MINTING)
# ============================================
# DO NOT ADD NEXT_PUBLIC_ PREFIX - KEEP THESE PRIVATE!
# These allow the server to execute blockchain transactions without user wallets

# Generate a new wallet with one of these commands:
# Using cast (Foundry): cast wallet new
# Using Node.js: node -e "const {privateKeyToAccount} = require('viem/accounts'); const account = privateKeyToAccount('0x' + require('crypto').randomBytes(32).toString('hex')); console.log('Address:', account.address); console.log('Private Key:', account.privateKey);"

STORY_PROTOCOL_PRIVATE_KEY=your_private_key_here_replace_this
MINTING_WALLET_ADDRESS=your_wallet_address_here

# Get testnet IP tokens from: https://faucet.story.foundation/

# ============================================
# Real Blockchain Configuration
# ============================================
NEXT_PUBLIC_ENABLE_REAL_BLOCKCHAIN=true
NEXT_PUBLIC_STORY_PROTOCOL_CONTRACT_ADDRESS=0x742d35Cc6634C0532925a3b8D4C9db96590e4265

# ============================================
# IPFS Configuration (Metadata Storage)
# ============================================
# Public gateway for accessing IPFS content
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key
NEXT_PUBLIC_PINATA_SECRET_KEY=your_pinata_secret_key

# Server-side IPFS (Pinata) - Keep these private for server-side use
# Sign up at https://pinata.cloud/ to get these keys
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_api_key
PINATA_JWT=your_pinata_jwt_token

# Optional: Custom IPFS gateway URL
IPFS_GATEWAY_URL=https://gateway.pinata.cloud

# ============================================
# Error Reporting (Optional)
# ============================================
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# ============================================
# Analytics (Optional)
# ============================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# Coinbase OnchainKit (Optional)
# ============================================
# Required if using Coinbase wallet features
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_coinbase_api_key

# ============================================
# Demo Mode (Optional)
# ============================================
# Set to true to use demo/mock data instead of real blockchain
NEXT_PUBLIC_DEMO_MODE=false

# ============================================
# SETUP CHECKLIST
# ============================================
# [ ] Copy this file to .env
# [ ] Generate a wallet (see commands above)
# [ ] Add STORY_PROTOCOL_PRIVATE_KEY
# [ ] Add MINTING_WALLET_ADDRESS
# [ ] Get IP tokens from faucet
# [ ] Sign up for Pinata and add API keys
# [ ] Restart your dev server
# [ ] Test with: curl http://localhost:3000/api/execute-transaction
# [ ] Read: MINTING_SETUP_GUIDE.md for detailed instructions
